<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.LifePay.PhonePayActivity">

    <include layout="@layout/item_toolbar_back" />

    <TextView
        android:id="@+id/phone_pay_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:text="1231231231" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phone_pay_20"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/obk_hhh"
            android:gravity="center"
            android:text="20闷"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phone_pay_50"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/obk_hhh"
            android:gravity="center"
            android:text="50闷"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/phone_pay_100"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/obk_hhh"
            android:gravity="center"
            android:text="100闷"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/phone_pay_200"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/obk_hhh"
            android:gravity="center"
            android:text="200闷"
            android:textSize="20dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/phone_pay_yuan"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="200元"/>

    <Button
        android:id="@+id/phone_pay_btn"
        android:background="#ECECEC"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去支付"/>


</LinearLayout>