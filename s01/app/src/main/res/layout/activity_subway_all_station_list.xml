<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Subway.SubwayAllStationListActivity">

    <include layout="@layout/item_toolbar_back"/>

    <include layout="@layout/item_progressbar"/>

    <SearchView
        android:id="@+id/subway_station_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/obk"
        android:layout_margin="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subway_station_list"
        android:layout_width="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"/>

</LinearLayout>