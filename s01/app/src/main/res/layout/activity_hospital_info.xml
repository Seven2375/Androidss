<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HospitalInfoActivity">

    <include layout="@layout/item_toolbar_back"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.youth.banner.Banner
            android:id="@+id/hospital_info_banner"
            tools:background="#F85858"
            android:layout_width="match_parent"
            android:layout_height="210dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/hospital_info_desc"
            android:layout_width="match_parent"
            android:textSize="19dp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_centerHorizontal="true"
                android:id="@+id/hospital_info_btn_intent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约挂号"/>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>