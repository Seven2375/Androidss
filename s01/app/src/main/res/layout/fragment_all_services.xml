<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/grey"
    android:orientation="vertical">

    <include layout="@layout/item_toolbar_noback" />

    <SearchView
        android:id="@+id/services_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/obk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/services_leftRv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/obk_upleft_bottomleft"
            android:padding="3dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/services_rightRv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/obk_upright_bottomright"
            android:padding="3dp" />

    </LinearLayout>


</LinearLayout>