<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".StopInfoActivity">

    <ImageView
        android:id="@+id/stop_info_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/wad"/>

    <TextView
        android:id="@+id/stop_info_name"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="停车场的名字"/>

    <TextView
        android:id="@+id/stop_info_address"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="停车场地址"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/stop_info_number"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="还剩多少位置"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stop_info_dis"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="距离你200米"/>
        <TextView
            android:id="@+id/stop_info_ifOpen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="是否对外开放"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stop_info_rates"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="每小时多少钱"/>
        <TextView
            android:id="@+id/stop_info_priceCaps"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="一天多少钱"/>

    </LinearLayout>


</LinearLayout>