<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grey"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/obk"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/news_comment_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="#000000"
            tools:text="蔡徐坤"/>
        <TextView
            android:id="@+id/news_comment_item_desc"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="在用Android Studio敲安卓代码时，经常会用到Ctrl+Z（撤销一步的操作），烦人的是，由于用惯了其他开发工具，总会习惯性Ctrl+Y，但Ctrl+Y在Android Studio里 是删除一行。"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="28sp">

            <TextView
                android:id="@+id/news_comment_item_date"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                tools:text="2021-10-2"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/news_comment_item_upImg"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/thumbsup_false" />

                <TextView
                    android:id="@+id/news_comment_item_likeNum"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    tools:text="999"
                    android:textStyle="bold"
                    android:layout_height="match_parent"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>